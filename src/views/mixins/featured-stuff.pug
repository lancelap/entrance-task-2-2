include picture

mixin featured-stuff(items)
  ul.featured-list
    each item in items
      li.featured-list__item.featured-item
        -var name = item[0]
        -var state = item[1]
        -var icon = item[2]
        +picture('featured-item__icon', 22, icon, icon)
        .featured-item__info
          p.featured-item__name #{name}
          if state != '' 
            p.featured-item__state #{state}